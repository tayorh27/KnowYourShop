<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kys.knowyourshop.Activity.ImageActivity">

    <com.master.glideimageview.GlideImageView
        android:id="@+id/glide_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/no_logo"
        app:error_res="@drawable/no_logo"
        app:placeholder_res="@drawable/no_logo"
        app:show_progress="true"/>
</FrameLayout>
